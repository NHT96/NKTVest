@using NKTVest.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; color:darkmagenta">DANH SÁCH SẢN PHẨM TIÊU BIỂU</h2>
@foreach (var sp in Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <a href="@Url.Action("Details", "SanPham", new {id = sp.MASP })">
                <img alt="@sp.TENSP" src="~/Content/images/anhbia/th/@sp.ANHBIA" width="200" />
                <div>
                    <br />
                    <h4 style="text-align:center">
                        @sp.TENSP
                    </h4>
                    <h4 style="text-align:center; color:darkred">
                        Giá bán: @sp.DONGIA
                    </h4>
                    <p></p>
                </div>
            </a>
        </div>
    </div>

}
<div>
    Trang @Model.PageNumber / @Model.PageCount
</div>
<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>

