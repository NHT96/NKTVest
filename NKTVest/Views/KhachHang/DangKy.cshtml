<style type="text/css">
    input[type=text] {
        width: 300px;
        box-sizing: border-box;
        border: 1px solid rebeccapurple;
        border-radius: 4px;
        font-size: 12px;
        outline: none;
        padding: 8px 10px;
        transition: width 0.4s ease-in-out;
    }
</style>
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h3 style="color:red; text-align:center">@ViewBag.ThongBao</h3>
<table align="center">
    <h2 style="text-align:center; color:maroon; font-weight:bold">ĐĂNG KÝ KHÁCH HÀNG</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td style="font-style:italic">Họ và Tên:</td>
            <td>@Html.TextBox("HOTENKH")
            @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-style:italic">Ngày Sinh:</td>
            <td>
                <input style="width:300px" type="date" name="NTNS"/>
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-style:italic">Địa Chỉ:</td>
            <td>@Html.TextBox("DIACHI") 
            @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-style:italic">Số Điện Thoại:</td>
            <td>@Html.TextBox("SDTKH")
            @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-style:italic">Email:</td>
            <td>@Html.TextBox("EMAILKH")
            @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-style:italic">Nhập Mật Khẩu:</td>
            <td>@Html.TextBox("PASSKH")
            @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-style:italic">Nhập Lại Mật Khẩu:</td>
            <td>@Html.TextBox("REPASSKH")
            @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng Ký" />
            </td>
        </tr>
    }
</table>