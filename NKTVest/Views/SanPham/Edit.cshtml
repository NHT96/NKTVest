@model NKTVest.Models.SANPHAM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
<script>tinymce.init({ selector: 'textarea' });</script>
<h2 style="text-align:center">CẬP NHẬT THÔNG TIN SẢN PHẨM</h2>

@using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-12">
            <div class="col-md-6" style="text-align:center">
                <div style="font-weight:bold">Mã Sản Phẩm</div>
                <div style="font-size:25; color:midnightblue; font-weight:bold">@Model.MASP</div>
            </div>
            <div class="col-md-6" style="text-align:center">
                <div style="font-weight:bold">Tên Sản Phẩm</div>
                <div style="width:300px">
                    @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-6" style="text-align:center">
                <div style="font-weight:bold">Đơn Giá</div>
                <div style="width:300px">
                    @Html.EditorFor(model => model.DONGIA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DONGIA, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6" style="text-align:center">
                <div style="font-weight:bold">Trạng Thái</div>
                <div style="width:300px">
                    @Html.EditorFor(model => model.TRANGTHAI, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TRANGTHAI, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-6" style="text-align:center">
                <div style="font-weight:bold">Ngày Cập Nhật</div>
                <div style="width:300px">
                    <input type="date" name="NGAYTHEM" style="width:300px"/>
                </div>
            </div>
            <div class="col-md-6" style="text-align:center">
                <div style="font-weight:bold">Ảnh Bìa</div>
                <div style="width:300px">
                    <input type="file" name="fileupload" />
                    <img src="~/Content/images/anhbia/th/@Model.ANHBIA" width="100" />(Ảnh hiện tại)
                    @ViewBag.Thongbao
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div style="text-align:center; font-weight:bold">Mô Tả Sản Phẩm</div>
            <div style="width:800px">
                <textarea name="MOTA">@Model.MOTA</textarea>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-6" style="text-align:center">
                <div style="font-weight:bold">Màu Sắc</div>
                <div style="width:300px">
                    @Html.EditorFor(model => model.MAUSAC, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MAUSAC, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6" style="text-align:center">
                <div style="font-weight:bold">Mã Loại</div>
                <div style="width:300px">
                    @Html.DropDownList("MALOAI")
                </div>
            </div>
        </div>
        <div style="text-align:center">
            <input type="submit" value="Cập Nhật Sản Phẩm" class="btn btn-default" style="font-weight:bold" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay Lại Danh Sách", "Index")
</div>
