@model NKTVest.Models.SANPHAM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">CHI TIẾT SẢN PHẨM</h2>


<table class="table">
    <tr>
        <th>
            Tên Sản Phẩm
        </th>
        <th>
            Đơn Giá
        </th>
        <th>
            Ngày Thêm
        </th>
        <th>
            Trạng Thái
        </th>
        <th>
            Ảnh Bìa
        </th>
        <th>
            Mô Tả
        </th>
        <th>
            Màu Sắc
        </th>
        <th>
            Loại Sản Phẩm
        </th>
    </tr>
    <tr>
        <td width="150px">
            @Html.DisplayFor(model => model.TENSP)
        </td>
        <td width="100px">
            @Html.DisplayFor(model => model.DONGIA)
        </td>
        <td width="100px">
            @String.Format("{0:dd/MM/yyyy}", Model.NGAYTHEM)
        </td>
        <td width="80px">
            @Html.DisplayFor(model => model.TRANGTHAI)
        </td>
        <td>
            <img src="~/Content/images/anhbia/th/@Model.ANHBIA" width="100" />
        </td>
        <td>
            @Html.DisplayFor(model => model.MOTA)
        </td>
        <td width="80px">
            @Html.DisplayFor(model => model.MAUSAC)
        </td>
        <td width="120px">
            @Html.DisplayFor(model => model.MALOAI)
        </td>
    </tr>
</table>
<p style="text-align:center">
    @Html.ActionLink("Sửa", "Edit", new { id = Model.MASP }) <br /><br />
    @Html.ActionLink("Quay Lại Danh Sách", "Index")
</p>
<style>
    footer {
        bottom: 0;
        position: absolute;
    }
</style>